<?xml version="1.0"?>

<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">

  <appSettings>
    <add key="umbracoDbDSN" value="server=server;database=company.project-LIVE;user id=company.project-LIVE;password=password"
    xdt:Transform="SetAttributes" xdt:Locator="Match(key)"/>
    <add key="umbracoDebugMode" value="false" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
  </appSettings>

  <system.net>
    <mailSettings>
      <smtp deliveryMethod="Network" from="name@company.co.uk">
        <network host="server" defaultCredentials="true" port="25" />
      </smtp>
    </mailSettings>
  </system.net>

  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />
    <customErrors xdt:Transform="SetAttributes" mode="RemoteOnly" />
  </system.web>

  <system.webServer>
    <httpErrors>
      <remove statusCode="404" subStatusCode="-1" />
      <error statusCode="404" prefixLanguageFilePath="" path="/site-support/error" responseMode="ExecuteURL" />
    </httpErrors>
  </system.webServer>

</configuration>
