<?xml version="1.0"?>

<!-- For more information on using web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=125889 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">

  <appSettings>
    <add key="umbracoDebugMode" value="false" xdt:Transform="SetAttributes" xdt:Locator="Match(key)" />
  </appSettings>
  
  <connectionStrings>
    <add name="umbracoDbDSN" connectionString="server=server;database=company.project-LIVE;user id=company.project-LIVE;password=password"
    xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
  </connectionStrings>

  <system.net>
    <mailSettings>
      <smtp deliveryMethod="Network" from="name@company.co.uk">
        <network host="server" defaultCredentials="true" port="25" />
      </smtp>
    </mailSettings>
  </system.net>

  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />
    <customErrors xdt:Transform="SetAttributes" mode="RemoteOnly" />
    
    <!-- Remove .NET version being display on the response header -->
    <httpRuntime xdt:Transform="SetAttributes" enableVersionHeader="false" />
    
  </system.web>

  <system.webServer>
    <httpErrors>
      <remove statusCode="404" subStatusCode="-1" xdt:Transform="Insert" />
      <error statusCode="404" prefixLanguageFilePath="" path="/site-support/error" responseMode="ExecuteURL" xdt:Transform="Insert" />
    </httpErrors>
    
    <security>
			<requestFiltering>
				<!-- Disable Umbraco Backoffice, and return 404 error -->
				<!-- When :: Use on slave nodes when load balancing
				<denyUrlSequences>
					<add sequence="/umbraco" xdt:Transform="Insert" />
					<add sequence="/umbraco_client" xdt:Transform="Insert" />
				</denyUrlSequences>
				-->
			</requestFiltering>
		</security>
		
  </system.webServer>

</configuration>
